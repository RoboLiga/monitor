{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://roboliga.raptorpond.com/game.json",
  "title": "Game",
  "description": "Describes the game state.",
  "type": "object",
  "properties": {
    "field": {
      "description": "Describes the playing field",
      "type": "object",
      "properties": {
        "width": {
          "type": "number",
          "minimum": 0
        },
        "height": {
          "type": "number",
          "minimum": 0
        },
        "apples": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/apple"
          }
        }
      },
      "required": [
        "width",
        "height",
        "apples"
      ]
    },
    "bots": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/bot"
      },
      "uniqueItems": true
    }
  },
  "definitions": {
    "position": {
      "type": "object",
      "properties": {
        "x": {
          "type": "number",
          "minimum": 0
        },
        "y": {
          "type": "number",
          "minimum": 0
        }
      },
      "required": [
        "x",
        "y"
      ]
    },
    "apple": {
      "type": "object",
      "properties": {
        "color": {
          "type": "string",
          "enum": [
            "red",
            "brown"
          ]
        },
        "x": {
          "type": "number",
          "minimum": 0
        },
        "y": {
          "type": "number",
          "minimum": 0
        }
      },
      "required": [
        "color",
        "x",
        "y"
      ]
    },
    "bot": {
      "type": "object",
      "properties": {
        "id": {
          "type": "integer"
        },
        "team": {
          "type": "integer"
        },
        "x": {
          "type": "number",
          "minimum": 0
        },
        "y": {
          "type": "number",
          "minimum": 0
        },
        "orientation": {
          "type": "number",
          "minimum": 0,
          "exclusiveMaximum": 360
        }
      },
      "required": [
        "id",
        "team",
        "x",
        "y",
        "orientation"
      ]
    }
  },
  "required": [
    "field",
    "bots"
  ]
}